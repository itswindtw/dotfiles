[user]
  name = Meng-Hsin Tung
  email = itswindtw@gmail.com
[color]
  ui = always
[alias]
  co = checkout
  st = status
  di = diff
  l  = log
  ci = commit
[credential]
  helper = osxkeychain
[push]
  default = simple
[core]
  excludesfile = ~/.gitignore_global
  editor = /usr/local/bin/nvim
  pager = diff-so-fancy | less --tabs=4 -RFX
  autocrlf = input
